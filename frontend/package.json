{
  "name": "soundspan-frontend",
  "version": "1.0.1",
  "description": "soundspan web frontend",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/soundspan/soundspan.git"
  },
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "node server.js",
    "lint": "eslint",
    "test:unit": "node --test --experimental-strip-types tests/unit/**/*.test.ts",
    "test:coverage": "node --test --experimental-strip-types --experimental-test-coverage --test-coverage-lines=100 --test-coverage-branches=100 --test-coverage-functions=100 --test-coverage-include=components/layout/activityPanelTabs.ts --test-coverage-include=components/layout/socialNavigation.ts --test-coverage-include=features/settings/components/sections/playbackHistoryConfig.ts tests/unit/**/*.test.ts",
    "test:component": "node --test --experimental-test-module-mocks --import ../backend/node_modules/tsx/dist/loader.mjs tests/component/*.test.ts",
    "test:component:coverage": "node --test --experimental-test-module-mocks --import ../backend/node_modules/tsx/dist/loader.mjs --experimental-test-coverage --test-coverage-include=components/layout/ActivityPanel.tsx --test-coverage-include=components/layout/Sidebar.tsx --test-coverage-include=components/layout/MobileSidebar.tsx --test-coverage-include=features/settings/components/sections/PlaybackHistorySection.tsx tests/component/*.test.ts",
    "test:component:coverage:changed": "bash -lc 'set -o pipefail; npm run test:component:coverage 2>&1 | node scripts/check-social-changed-coverage.mjs'",
    "test:coverage:social": "npm run test:coverage && npm run test:component:coverage:changed",
    "test:e2e": "playwright test",
    "test:predeploy": "playwright test tests/e2e/predeploy --reporter=list",
    "test:predeploy:ui": "playwright test tests/e2e/predeploy --ui",
    "test:predeploy:headed": "playwright test tests/e2e/predeploy --headed",
    "analyze": "ANALYZE=true next build --webpack"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/dompurify": "^3.0.5",
    "@types/howler": "^2.2.12",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.23.26",
    "howler": "^2.2.4",
    "lucide-react": "^0.552.0",
    "next": "^16.0.10",
    "http-proxy-middleware": "^3.0.5",
    "qrcode.react": "^4.2.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-virtuoso": "^4.18.1",
    "recharts": "^3.6.0",
    "socket.io-client": "^4.8.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.1.3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
